{% extends 'layout.njk' %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        <section class="avatar"></section>
        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="item">
                <div>Avatar</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="https://">
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do Instrutor">
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked="checked">Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Formação</div>
                <div>
                    <select name="degree">
                        <option value="0">Graduação</option>
                        <option value="1">Mestrado</option>
                        <option value="2">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Área de Atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe os serviços por vírgula">
                </div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>

{% endblock content %}